module SignPlace
(
	input SignBit,
	input [3:0] onesI,
	input [3:0] tensI,
	input [3:0] hundredsI,
	output reg [3:0] onesO,
	output reg [3:0] tensO,
	output reg [3:0] hundredsO,
	output reg [3:0] signO
);

always @(SignBit, onesI, tensI, hundredsI)
	if (SignBit==1'b1) begin
		if (tensI==4'b0000 && hundredsI==4'b0000) begin
			onesO = onesI;
			tensO = 4'b1110;
			hundredsO = 4'b1111;
			signO = 4'b1111;
		end
		
		else begin
			if (hundredsI==4'b0000) begin
				onesO = onesI;
				tensO = tensI;
				hundredsO = 4'b1110;
				signO = 4'b1111;
			end
			
			else begin
				onesO = onesI;
				tensO = tensI;
				hundredsO = hundredsI;
				signO = 4'b1110;
			end
		end
	end
	
	else begin
		if (tensI==4'b0000 && hundredsI==4'b0000) begin
			onesO = onesI;
			tensO = 4'b1111;
			hundredsO = 4'b1111;
			signO = 4'b1111;
		end
		
		else begin
			if (hundredsI==4'b0000) begin
				onesO = onesI;
				tensO = tensI;
				hundredsO = 4'b1111;
				signO = 4'b1111;
			end
			
			else begin
				onesO = onesI;
				tensO = tensI;
				hundredsO = hundredsI;
				signO = 4'b1111;
			end
		end
	end
endmodule

